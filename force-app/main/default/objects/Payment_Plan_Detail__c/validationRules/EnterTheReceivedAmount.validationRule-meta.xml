<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EnterTheReceivedAmount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c,&apos;Paid&apos;),ISBLANK(Received_Amount__c))</errorConditionFormula>
    <errorDisplayField>Received_Amount__c</errorDisplayField>
    <errorMessage>Please enter the amount</errorMessage>
</ValidationRule>
